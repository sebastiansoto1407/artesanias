@model practicamvc.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registro de usuario";
}

<div class="container" style="max-width: 600px; margin-top: 50px;">
    <div class="card">
        <div class="card__body">
            <h2 style="text-align: center; margin-bottom: 24px;">Crear cuenta nueva</h2>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" style="color: var(--color-error); margin-bottom: 16px;"></div>

                <div class="form-group">
                    <label asp-for="NombreCompleto" class="form-label"></label>
                    <input asp-for="NombreCompleto" class="form-control" autofocus />
                    <span asp-validation-for="NombreCompleto" style="color: var(--color-error); font-size: var(--font-size-sm);"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" style="color: var(--color-error); font-size: var(--font-size-sm);"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" style="color: var(--color-error); font-size: var(--font-size-sm);"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" style="color: var(--color-error); font-size: var(--font-size-sm);"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaNacimiento" class="form-label"></label>
                    <input asp-for="FechaNacimiento" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" style="color: var(--color-error); font-size: var(--font-size-sm);"></span>
                </div>

                <button type="submit" class="btn btn--primary btn--full-width"  style="margin-top: 16px; background-color: #007BFF; color: white;">
                    Registrarse
                </button>

                <p style="text-align: center; margin-top: 16px;">
                    ¿Ya tienes cuenta? <a asp-action="Login">Inicia sesión aquí</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
