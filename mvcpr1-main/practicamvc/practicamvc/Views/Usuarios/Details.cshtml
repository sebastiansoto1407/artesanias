@model practicamvc.Models.UsuarioModel
@{
    ViewData["Title"] = "Detalles de Usuario";
}

<div class="container" style="max-width: 500px; margin-top: 50px;">
    <div class="card">
        <div class="card-body">
            <h2 class="mb-4 text-center">Detalles del usuario</h2>
            <dl class="row">
                <dt class="col-sm-5">Nombre completo</dt>
                <dd class="col-sm-7">@Model.NombreCompleto</dd>
                <dt class="col-sm-5">Email</dt>
                <dd class="col-sm-7">@Model.Email</dd>
                <dt class="col-sm-5">Rol</dt>
                <dd class="col-sm-7">
                    <span class="badge @(Model.Rol == "Administrador" ? "bg-danger" : Model.Rol == "Vendedor" ? "bg-success" : "bg-primary")">
                        @Model.Rol
                    </span>
                </dd>
                <dt class="col-sm-5">Fecha de nacimiento</dt>
                <dd class="col-sm-7">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-5">Fecha de registro</dt>
                <dd class="col-sm-7">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>
                <dt class="col-sm-5">Activo</dt>
                <dd class="col-sm-7">
                    @(Model.EstaActivo ? "Sí" : "No")
                </dd>
            </dl>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 mb-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary w-100">Volver</a>
        </div>
    </div>
</div>
