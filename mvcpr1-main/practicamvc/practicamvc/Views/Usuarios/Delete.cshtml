@model practicamvc.Models.UsuarioModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container" style="max-width: 500px; margin-top: 50px;">
    <div class="card">
        <div class="card-body">
            <h2 class="mb-4 text-center text-danger">Eliminar usuario</h2>
            <dl class="row">
                <dt class="col-sm-5">Nombre</dt>
                <dd class="col-sm-7">@Model.NombreCompleto</dd>
                <dt class="col-sm-5">Email</dt>
                <dd class="col-sm-7">@Model.Email</dd>
                <dt class="col-sm-5">Rol</dt>
                <dd class="col-sm-7">@Model.Rol</dd>
                <dt class="col-sm-5">Fecha de nacimiento</dt>
                <dd class="col-sm-7">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-5">Activo</dt>
                <dd class="col-sm-7">
                    @(Model.EstaActivo ? "Sí" : "No")
                </dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary mt-2 w-100">Cancelar</a>
            </form>
        </div>
    </div>
</div>
